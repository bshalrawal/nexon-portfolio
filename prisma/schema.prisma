generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Card {
  id          String   @id @default(uuid())
  title       String
  subtitle    String?
  description String?
  imageUrl    String
  gallery     String?
  slug        String   @unique
  category    String?
  tags        String?
  orderIndex  Int      @default(0)
  widthUnits  Int      @default(1)
  heightUnits Int      @default(1)
  isPublished Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model User {
  id       String @id @default(uuid())
  email    String @unique
  password String
}
